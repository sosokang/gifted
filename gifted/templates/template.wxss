/* templates/tabbar.wxss */

.foot {
  position: fixed;
  z-index: 99999;
  background: #fff;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  width: 100%;
  height: 108rpx;
  border-top: 1px solid #e0e0e0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(224, 224, 224, 1);
}

.foot .left, .foot .right {
  flex: 1;
  -webkit-flex: 1;
  text-align: left;
  position: relative;
  line-height: 108rpx;
  color: #333;
  font-size: 32rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
}

.foot .img {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top: 25rpx;
}

.foot .left, .foot .right {
  text-indent: 150rpx;
}

.foot .left .img, .foot .right .img {
  left: 100rpx;
}
.foot .active{
  background: #FFFBFB;
  color: #D84E43;
  font-weight: bold;
}
