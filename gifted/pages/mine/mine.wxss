/* pages/mine/mine.wxss */
@import "../../templates/template.wxss";
.main{
  background:#F4F4F4;
}
.header{
  width:100%;
  height:140rpx;
  background: #DC5147;
}
.header>view:first-child{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
   overflow: hidden; 
  margin:24rpx 0 0 46rpx;
}
.header .avatar{
  width:100%;
  height:100%; 
}
.header .uname{
  line-height: 140rpx;
  color:#fff;
  margin-left:18rpx;
}
.header button{
  width:244rpx;
  height:70rpx;
  background: #fff;
  color:#DC5147;
  line-height: 70rpx;
  font-size: 28rpx;
  margin:35rpx 32rpx 0 0;
  border-radius:3px;
}

.content>view:not(:first-child){
  width:100%;
}
.content>view:first-child>view{
  width:50%;
  height:92rpx;
  line-height: 92rpx;
  text-align: center;
  background: #FAFAFA;
  border-bottom: 1px solid #E5E5E5;
}
.current{
  color:#DC5147;
  border-bottom: 1px solid #DC5147 !important;
}
.empty>image{
  width:258rpx;
  height:348rpx;
  margin:200rpx 0 0 246rpx;
}
.empty>text{
  display: block;
  margin-top:82rpx;
}
.receive,.give{
  width:100%;
  overflow-x: hidden;
  position: relative;
}
.itemView{
  height:180rpx;
  background:#fff;
  border-bottom:1px solid #F4F4F4; 
  position: absolute;
  transition: all .3s linear;
}
.formBtn{
  height:180rpx;
  position: absolute;
  left:0;
  top:0;
  background: transparent;
  z-index: 10;
}
.itemView image{
  width:160rpx;
  height:140rpx;
  border-radius: 10rpx;
  border:1px solid #FFDEDC;
  margin:20rpx 0 0 32rpx;
}
.son2{
  margin:10rpx 0 0 20rpx;
}
.son2>text:last-child{
  color:#999999;
  font-size: 24rpx;
}
.son3{
  height:100%;
  width:30%;
  position: relative;
  top:10rpx;
  right:52rpx;
}
.son3>text:first-child{
  position: absolute;
  top:0;
  right:0;
}
.son3>text:last-child{
  color:#D84E43;
  font-size: 24rpx;
  position: absolute;
  top:100rpx;
  right:0;
}
.son4{
  height:100%;
  background:#DC5147; 
  color:#fff;
  font-size: 36rpx;
  line-height: 180rpx;
  text-align: center;
  box-sizing: border-box;
}
.itemView .title{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.notice{
  position:absolute;
  left:0;
  height:80rpx;
  line-height:80rpx;
  animation-name:fadeIn;
  animation-duration:1s;
  animation-timing-function:ease-in;
}

.shadow{
  width: 100%;
  height: 2000rpx;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index:20;
  padding:0 32rpx;
}
.shadow>view{
  width:100%;
  height:800rpx;
  background: #fff;
  border-radius: 5px;
  margin-top:25%;
}
.shadow .date{
  width:100%;
  height:110rpx;
  background: #DC5147;
  border-radius:5px 5px 0 0; 
  text-align: center;
  color:#fff;
  font-size: 48rpx;
  line-height: 110rpx;
}
.date+view{
  width: 100%;
  height:140rpx;
}
.date+view>view{
  margin:36rpx 0 0 46rpx;
}
.date+view>view>text:first-child{
  margin-left:15rpx;
}
.date+view>view>text:last-child{
  color:#DC5147;
}
.date+view>button{
  width:120rpx;
  height:60rpx;
  margin:40rpx 32rpx 0 0;
  background: #DC5147;
  color:#fff;
  font-size: 26rpx;
}
.shadow image{
  width:100%;
  height:550rpx;
}
@keyframes fadeIn{
    0%{
        opacity:0;
    }
    100%{
         opacity:1;
    }
}
/* 用户授权 */
.toast{
  width:100vw;
  height: 100vh;
  overflow: hidden;
  background: rgba(0,0,0,.5);
  position: absolute;
  top:0;
  left:0;
  transition: all ease .3s;
  z-index: 999;
}
.authorize{
  position: fixed;
  z-index: 9;
  width:600rpx;
  height: 332rpx;
  top:0;
  left: 0;
  bottom:0;
  right:0;
  margin:auto;
  border-radius: 10rpx;
}
.toast image{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: -1;
}
.toast .tip{
  font-size: 24rpx;
  font-family:PingFangSC-Regular;
  color:rgb(102,102,102);
  line-height:48rpx;
  margin:34rpx 0 10rpx;
}
.toast .tipCon{
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  color:rgb(51,51,51);
  line-height:48rpx;
}
.toast .confim{
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  color:rgb(216,78,67);
  line-height:90rpx;
  margin-top:30rpx;
  background:transparent;
}